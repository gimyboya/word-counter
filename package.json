{
  "name": "word-counter",
  "version": "0.0.0-development",
  "description": "A CLI that counts words in your file, because why not",
  "keywords": [
    "typescript",
    "cli"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/gimyboya/word-counter"
  },
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "commit": "git-cz",
    "prebuild": "rimraf dist",
    "prebuild:watch": "rimraf dist",
    "start": "npx ts-node index.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "lint": "eslint index.ts src/**/*.ts",
    "test": "jest --coverage --verbose",
    "test:watch": "jest --watch",
    "validate": "npm-run-all --parallel lint test",
    "report-coverage": "cat ./tests/unit/coverage/lcov.info | codecov",
    "travis-deploy-once": "travis-deploy-once",
    "semantic-release": "semantic-release"
  },
  "author": "gimyboya <biz.afatah@gmail.com>",
  "contributors": [
    {
      "name": "gimyboya",
      "email": "biz.afatah@gmail.com"
    }
  ],
  "license": "MIT",
  "dependencies": {
    "lodash": "^4.17.10",
    "rxjs": "^6.2.1"
  },
  "devDependencies": {
    "@types/es6-promise": "^3.3.0",
    "@types/jest": "^22.2.2",
    "@types/lodash": "^4.14.102",
    "@types/sinon": "^5.0.1",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "codecov": "^3.0.1",
    "commitizen": "^2.10.1",
    "commitlint": "^6.2.0",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^7.20.0",
    "ghooks": "^2.0.4",
    "jest": "^22.4.3",
    "npm-run-all": "^4.1.2",
    "prettier": "1.16.4",
    "rimraf": "^2.6.2",
    "semantic-release": "^15.2.0",
    "sinon": "^5.0.10",
    "travis-deploy-once": "^5.0.0",
    "ts-jest": "^22.4.2",
    "typescript": "^4.1.2",
    "validate-commit-msg": "^2.14.0"
  },
  "files": [
    "dist"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "commit-msg": "validate-commit-msg"
    }
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "coverageDirectory": "<rootDir>/tests/unit/coverage",
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.ts"
    ]
  }
}
